<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_ListaAlimento"
    android:background="@color/background">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:src="@drawable/background_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:paddingRight="30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentos:"
            android:textColor="@color/TextDefault"
            android:textSize="100px"
            android:layout_marginTop="10px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arroz"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"
            android:layout_marginTop="50px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Açucar"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feijão"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macarrão"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-490px"
        android:paddingLeft="500px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Val.20/07/2020"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"
            android:layout_marginTop="50px"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Val.18/09/2020"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Val.01/10/2020"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Val.05/11/2020"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="10px"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="150px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="858px">

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar"
                android:layout_weight="1"
                android:background="@color/button"
                android:textColorHint="#FFF"/>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_weight="1"
                android:background="@color/button"
                android:textColorHint="#FFF"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>