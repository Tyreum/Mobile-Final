<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_PassForgot"
    android:layout_margin="30dp">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:src="@drawable/background_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="300px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Será enviado um código de confirmação para o email registrado"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite seu email:"
            android:layout_marginTop="50px"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/EditText"
            android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

        <Button
            android:id="@+id/SendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar senha"
            android:layout_marginRight="150px"
            android:layout_marginLeft="150px"
            android:textColor="@color/colorAccent"
            android:background="@color/button"
            android:layout_marginTop="15px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insira o código:"
            android:layout_marginTop="50px"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/EditText"
            android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código"/>

        <Button
            android:id="@+id/btnValidCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="150px"
            android:layout_marginLeft="150px"
            android:text="Validar código"
            android:textColor="@color/colorAccent"
            android:background="@color/button"
            android:layout_marginTop="15px"/>

    </LinearLayout>

</RelativeLayout>