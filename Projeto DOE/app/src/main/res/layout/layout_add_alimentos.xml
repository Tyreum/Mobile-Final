<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_AddAlimento"
    android:layout_margin="30dp">

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:src="@drawable/background_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:paddingRight="30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Alimento"
            android:textSize="80px"
            android:textColor="@color/TextDefault"
            android:paddingLeft="120px"/>

        <EditText
            android:background="@color/EditText"
            android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alimento"
            android:id="@+id/etRegistrarAlimento"
            android:drawableRight="@drawable/ic_adicionar"
            android:drawableTint="@color/TextDefault"
            android:layout_marginTop="40px"/>

        <EditText
            android:layout_marginTop="10dp"
            android:background="@color/EditText"
            android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRegistrarValidade"
            android:hint="Data de validade mm/yy ex: 05/22"
            android:drawableTint="@color/TextDefault"
            android:drawableRight="@drawable/ic_adicionar"/>

        <EditText
            android:layout_marginTop="10dp"
            android:background="@color/EditText"
            android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do bairro"
            android:id="@+id/etRegistrarAlimentoBairro"
            android:drawableTint="@color/TextDefault"
            android:drawableRight="@drawable/ic_adicionar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="150px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="450px">

            <Button
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_seta_voltar"
                android:text="Voltar"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:background="@color/button"/>

            <Button
                android:id="@+id/btnAdicionarAlimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_adicionar"
                android:text="Adicionar"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:background="@color/button"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>